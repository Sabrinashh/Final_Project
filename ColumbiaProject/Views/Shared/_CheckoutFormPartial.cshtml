 @model Order
<form id="order-form" method="post">
    <h6>Contact information</h6>
    <div class="form-control">
        <label asp-for="Email">E-mail</label>
        <div>

            <input asp-for="Email"  type="email" id="checkout-email" name="checkout-email" placeholder="Enter your email...">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-control">
        <label asp-for="Phone">Phone</label>
        <div>
            <input asp-for="Phone" type="tel" name="checkout-phone" id="checkout-phone" placeholder="Enter you phone...">
            <span class="text-danger" asp-validation-for="Phone"></span>
        </div>
    </div>
    <br>
    <h6>Shipping address</h6>
    <div class="form-control">
        <label asp-for="Fullname">Full name</label>
        <div>
            <input asp-for="Fullname" type="text" id="checkout-name" name="checkout-name" placeholder="Enter you name...">
            <span class="text-danger" asp-validation-for="Fullname"></span>
        </div>
    </div>
    <div class="form-control">
        <label asp-for="Address">Address</label>
        <div>
            <input asp-for="Address" type="text" name="checkout-address" id="checkout-address" placeholder="Your address...">
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>
    </div>
    <div class="form-control">
        <label asp-for="City">City</label>
        <div>
            <input asp-for="City" type="text" name="checkout-city" id="checkout-city" placeholder="Your city...">
            <span class="text-danger" asp-validation-for="City"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="form-control">
            <label for="checkout-country">Country</label>
            <div>
                <input type="text" name="checkout-country" id="checkout-country" placeholder="Your country..." list="country-list">
                <datalist id="country-list">
                    <option value="Azerbaijan"></option>
                    <option value="Turkey"></option>
                    <option value="France"></option>
                    <option value="Italy"></option>
                    <option value="Spain"></option>
                    <option value="India"></option>
                    <option value="USA"></option>
                    <option value="Russia"></option>
                    <option value="Japan"></option>
                    <option value="Egypt"></option>
                </datalist>
            </div>
        </div>
        <div class="form-control">
            <label asp-for="ZipCode">Zip code</label>
            <div>
                <input asp-for="ZipCode" type="numeric" name="checkout-postal" id="checkout-postal" placeholder="Your postal code...">
                <span class="text-danger" asp-validation-for="ZipCode"></span>
            </div>
        </div>
    </div>

    <div class="form-control-btn ">
        <button form="order-form" type="submit" class="bg-dark">Continue</button>
    </div>
</form>
 